# Claude API (Anthropic)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI (DALL-E 3 image generation)
OPENAI_API_KEY=sk-your-key-here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
JOYCE_TELEGRAM_USER_ID=your-telegram-user-id

# Model settings (optional - defaults shown)
CLAUDE_MODEL=claude-sonnet-4-5-20250929
MAX_TOKENS_POST=3000
MAX_TOKENS_CALENDAR=8000
MAX_TOKENS_STRATEGIST=2048

# ── Publishing ────────────────────────────────────────────────
# Master switch: set to "true" after running setup_instagram.py
PUBLISH_ENABLED=false

# Instagram Graph API (get from Meta Developer portal)
INSTAGRAM_APP_ID=your-meta-app-id
INSTAGRAM_APP_SECRET=your-meta-app-secret

# imgbb image hosting (free at https://api.imgbb.com/)
# Required for Instagram publishing (Graph API needs public image URLs)
IMGBB_API_KEY=your-imgbb-api-key
